<UserControl
    x:Class="ModuleA.Navigation.ViewAButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:inf="clr-namespace:Demo.Infrastructure;assembly=Demo.Infrastructure"
    xmlns:views="clr-namespace:ModuleA.Views">

    <Grid Margin="5">
        <Button
            Content="Navigate to View A"
            Command="{x:Static Member=inf:ApplicationCommands.NavigateCommand}"
            CommandParameter="{x:Type views:ViewA}"/>
    </Grid>

</UserControl>
