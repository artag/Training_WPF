<UserControl
    x:Class="Demo.People.Views.PeopleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="Auto"
    Height="Auto">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--
        First Name
        -->
        <TextBlock
            Margin="5"
            Grid.Row="0"
            Grid.Column="0"
            Text="First Name:"/>
        <TextBox
            Margin="5"
            Grid.Row="0"
            Grid.Column="1"
            Text="{Binding Person.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <!--
        LastName
        -->
        <TextBlock
            Margin="5"
            Grid.Row="1"
            Grid.Column="0"
            Text="Last Name:"/>
        <TextBox
            Margin="5"
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Person.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <!--
        Age
        -->
        <TextBlock
            Margin="5"
            Grid.Row="2"
            Grid.Column="0"
            Text="Age:"/>
        <TextBox
            Margin="5"
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding Person.Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <!--
        Last Updated
        -->
        <TextBlock
            Margin="5"
            Grid.Row="3"
            Grid.Column="0"
            Text="Last Updated:"/>
        <TextBlock
            Margin="5"
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding Person.LastUpdated}"/>

        <!--
        Save Button
        -->
        <Button
            Margin="10"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="Save"
            Command="{Binding SaveCommand}"
            CommandParameter="{Binding Person}"/>

    </Grid>

</UserControl>
